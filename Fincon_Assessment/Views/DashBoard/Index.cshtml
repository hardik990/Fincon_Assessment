@model Fincon_Assessment.Models.DashBoard
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Welcome to Fincon Accounting</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="~/images/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="~/images/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="icon" href="~/images/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/css/responsive.css" type="text/css" />
</head>
<body>
    @Html.HiddenFor(model => model.message, new { id = "message" })
    <div class="wrapper">
        <div class="content-part">
            <div class="left">
                <div class="logo">
                    <a href="dashboard.html" class="lg-hide">
                        <img src="~/images/logo.png" alt="Logo" />
                    </a>
                    <div class="menu">
                        <a href="#" class="toggle-nav">
                            <span class="top"></span>
                            <span class="center"></span>
                            <span class="bottom"></span>
                        </a>
                    </div>
                </div>
                <div class="nice-nav">
                    <ul>
                        <li class="child-menu active">
                            <a href="#" class=" toggle-right">
                                <i class="fa fa-tachometer" aria-hidden="true"></i>
                                <span class="menutitle">Dashboard</span>
                            </a>
                        </li>
                        <li class="child-menu">

                        </li>
                    </ul>
                </div>
            </div>
            <div class="right">
                <header class="header-div">
                    <div class="innertmarc">
                        <img src="~/images/logo.png" />
                    </div>
                    <div class="header-right">
                        <div class="user-avtar dropdown">
                            <a class="menu-filter usertext" data-toggle="dropdown" aria-expanded="true">
                                Welcome
                                <strong>@Model.UserName</strong>
                            </a>
                            <div class="dropdown-menu">
                                <a class="d-block d-sm-none" href="javascript:void(0);">Welcome <strong>@Model.UserName</strong></a>
                                <a href="@Url.Action("Login", "Login")">Logout</a>
                            </div>
                        </div>
                        <div class="logout">
                            <a href="@Url.Action("Login", "Login")"></a>
                        </div>
                    </div>
                </header>
                <div class="title blue-part">
                    <h1>New Quotation</h1>
                    <div class="addnew">
                        <a href="@Url.Action("NewQuotation", "DashBoard")" class="btn btn-primary text-uppercase addicon">Add <span>Quotation</span></a>
                    </div>
                </div>
                <div class="content-div">
                    <div class="maindiv">
                        <div class="dashboard-table">
                            <div class="dashboard-table-inner">
                                <div class="table-custom">
                                    <table id="table1" class="display">
                                        <thead>
                                            <tr>
                                                <th>Customer Name</th>
                                                <th>Date</th>
                                                <th>Total Including Vat</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var e1 in Model.lstData)
                                                {
                                                    <tr style="background-color:@e1.ColourIndex;color:black">
                                                        <td>@e1.CustomerNamer</td>
                                                        <td>@e1.date</td>
                                                        <td>@e1.TotalExcludingVat</td>
                                                        <td>@e1.Status</td>
                                                        <td>
                                                            <a href="@Url.Action("ViewQuotation", "DashBoard",new { Id = e1.Id})"><i class="fa fa-eye" aria-hidden="true"></i></a>

                                                            <a href="@Url.Action("EditQuotation", "DashBoard",new { Id = e1.Id})"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

                                                            <a href="@Url.Action("DeleteQuotation", "DashBoard",new { Id = e1.Id })"><i class="fa fa-remove" aria-hidden="true"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/jquery-3.3.1.slim.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/popper.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/js/custom.js"></script>
    <script type="text/javascript" src="~/js/BusyIndicator.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($("#message").val() != "") {
                alert($("#message").val());
            }
        });
        $('#table1').DataTable({
            "sDom": '<"top">rt<"bottom"p>',
            columnDefs: [{ orderable: false, targets: [5, 6, 7, 8] }]
        });
    </script>
</body>
</html>
