@model Fincon_Assessment.Models.Login
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Welcome to Fincon Accounting</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png" sizes="180x180" />
    <link rel="icon" href="~/images/favicon-32x32.png" sizes="32x32" type="image/png" />
    <link rel="icon" href="~/images/favicon-16x16.png" sizes="16x16" type="image/png" />
    <link rel="icon" href="~/images/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/css/responsive.css" type="text/css" />
    <link href="~/css/BusyIndicator.css" rel="stylesheet" />
</head>
<body class="login">
    <input type="hidden" id="ErrorMessage" value="@Model.ErrorMessage" />


    <div class="loader" style="display:normal">
        <div class="spinner-border"></div>
    </div>
    <div class="login-wrapper d-flex">
        <div class="login-left d-flex justify-content-center align-items-center">

        </div>
        <div class="login-right d-flex flex-column justify-content-center">
            <div class="loginform">
                <div class="tmarc">
                    <img src="~/images/logo.png" />
                </div>
                <p>
                    The Fincon Accounting is used to create various Quating base on different user.
                </p>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @id = "frmLogin", @class = "login-form" }))
                {
                    <div class="form-group mb-3">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "50", @tabindex = "1" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @tabindex = "2", @autocomplete = "off" })
                    </div>

                    <div class="form-group loginaction">
                        <input type="submit" class="btn btn-primary loginbtn" onclick="return validateUser();" value="Login" />
                        <div class="or"><strong>Or</strong></div>
                        <div class="Register">
                            <a href="@Url.Action("Register", "Register")"  class="btn btn-primary">Register</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</body>

</html>

<script src="~/js/jquery-3.3.1.slim.min.js" type="text/javascript"></script>
<script src="~/js/jquery.min.js" type="text/javascript"></script>
<script src="~/js/popper.min.js" type="text/javascript"></script>
<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/js/custom.js" type="text/javascript"></script>
<script src="~/js/BusyIndicator.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        if ($("#ErrorMessage").val() != "") {
            alert($("#ErrorMessage").val());
        }
    });


    function validateUser() {
        if ($("#UserName").val() == "") {
            alert("Please enter Email");
            return false;
        }
        else if ($("#Password").val() == "") {
            alert("Please enter Password");
            return false;
        }
        else {
            start();
            return true;
        }

    }
</script>

